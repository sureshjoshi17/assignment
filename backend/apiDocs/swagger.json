{
  "swagger": "2.0",
  "info": {
    "title": "Ecommerce App",
    "description": "This is a backend server for ecommerce app.",
    "contact": {
        "email": "developer@gmail.com"
    },
    "version": "1.0.0",
    "termsOfService":"http://swagger.io/terms/",
    "license":{
        "name":"Apache 2.0",
        "url":"http://www.apache.org/licenses/LICENSE-2.0.html"
    }    
  },
  "basePath": "/api/v1",
  "tags":[
    {
    "name":"User Auth",
    "description":"Operations about user auth",
    "externalDocs":{
        "description":"Find out more about our store",
        "url":""
        }
    },
    {
    "name":"Product",
    "description":"Operations about product",
    "externalDocs":{
        "description":"Find out more about our store",
        "url":"http://swagger.io"
        }
    }
],  
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json",
    "application/x-www-form-urlencoded",
    "multipart/form-data"
  ],
  "produces": [
    "application/json"
  ],
 
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": [
          "User Auth"
        ],
        "description": "User signup api",
        "consumes": [
            "application/x-www-form-urlencoded"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "formData",
            "description": "Enter full name",
            "required": true,
            "type": "string"
          },
          {
            "name": "email",
            "in": "formData",
            "description": "Enter registered email",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "Enter password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
            "200": {
                "description": "Successfully"
            },
            "500": {
                "description": "Internal server error"
            }
        },
        "security": [
            {
                "basicAuth": [
                    "Username: ",
                    "Password: "
                ]
            }
        ]
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "User Auth"
        ],
        "description": "User login api",
        "consumes": [
            "application/x-www-form-urlencoded"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "formData",
            "description": "Enter registered email",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "Enter password",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
            "200": {
                "description": "Successfully"
            },
            "500": {
                "description": "Internal server error"
            }
        },
        "security": [
            {
                "basicAuth": [
                    "Username: ",
                    "Password: "
                ]
            }
        ]
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Product"
        ],
        "description":"Product list api",
        "consumes": [
            "multipart/form-data"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "type": "number"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Page limit",
            "type": "number"
          }
        ],
        "responses": {
            "200": {
                "description": "Successfully"
            },
            "401": {
                "description": "Unauthorized"
            }
        },
        "security": [
            {
                "basicAuth": [
                    "Username: ",
                    "Password: "
                ]
            }
        ]
      }
    }
  },
  
  "securityDefinitions": {
        "basicAuth": {
            "type": "basic"
        }
    }
}